<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:layout_margin="2dp"
        android:id="@+id/nomeFantasiaTextView"
        android:layout_width="310dp"
        android:layout_height="52dp"
        android:text="@string/nomeFantasia"
        android:textSize="@dimen/titleSize" />

    <TextView
        android:layout_margin="2dp"
        android:id="@+id/razaoSocialTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="63dp"
        android:text="@string/razaoSocial"
        android:textSize="@dimen/subtitleSize" />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
    <RatingBar
        android:id="@+id/ratingBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="0dp"
        android:layout_marginStart="0dp"
        android:max="5"
        android:numStars="5"
        android:padding="0dp"
        android:scaleX="0.5"
        android:scaleY="0.5"
        android:transformPivotX="0dp"
        android:transformPivotY="0dp" />

    </RelativeLayout>

    <TextView
        android:id="@+id/descricaoOngTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/oquePrecisamosTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/oqueprecisa"
        android:layout_marginTop="63dp"/>


    <TextView
        android:id="@+id/necessidadesTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />

    <TextView
        android:id="@+id/contaBancariaTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />

    <Button
        android:id="@+id/btnVoluntariar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="70dp"
        android:layout_marginRight="70dp"
        android:layout_marginTop="5dp"
        android:text="@string/voluntariarse" />

    <Button
        android:id="@+id/btnAvaliar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="70dp"
        android:layout_marginRight="70dp"
        android:layout_marginTop="5dp"
        android:text="Avaliar Organização" />


</LinearLayout>